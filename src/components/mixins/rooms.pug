//- Карточка комнаты (вертикальная): фото, название, описание, параметры, кнопка
//- @param {object} room - { title, description, img, imgAlt, params: [{ icon, text }], link }
mixin RoomCard(room)
  article.room-card
    .room-card_img
      a.room-card_img-link(href=room.link)
        img(src=room.img, alt=room.imgAlt || room.title)
    .room-card_content
      h2.room-card_title
        a.room-card_title-link(href=room.link)= room.title
      if room.description
        p.room-card_description= room.description
      if room.params && room.params.length
        ul.room-card_params
          each param in room.params
            li.room-card_param
              if param.icon
                img.room-card_param-icon(src=param.icon, alt="")
              span.room-card_param-text= param.text
      .room-card_actions
        +Button('Подробнее', ['primary', 'md'])(href=room.link)

//- Карточка комнаты (горизонтальная, альт): медиа слева, контент справа
//- @param {object} room - тот же формат, что и у RoomCard
mixin RoomCardAlt(room)
  article.room-card-alt
    .room-card-alt_media
      a.room-card-alt_media-link(href=room.link)
        img.room-card-alt_media-img(src=room.img, alt=room.imgAlt || room.title)
    .room-card-alt_body
      .room-card-alt_main
        h2.room-card-alt_title
          a.room-card-alt_title-link(href=room.link)= room.title
        if room.description
          p.room-card-alt_description= room.description
      .room-card-alt_aside
        if room.params && room.params.length
          ul.room-card-alt_params
            each param in room.params
              li.room-card-alt_param
                if param.icon
                  img.room-card-alt_param-icon(src=param.icon, alt="")
                span.room-card-alt_param-text= param.text
        .room-card-alt_actions
          +Button('Подробнее', ['secondary', 'md'])(href=room.link)

