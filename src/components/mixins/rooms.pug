//- Секция «Другие хоромы» — свайпер с карточками комнат (для страницы одной комнаты)
//- @param {array} items - массив комнат (тот же формат, что и у RoomCard)
//- @param {string} title - заголовок секции
mixin RoomsSwiper(props = {})
  -
    const items = props.items || [];
    const title = props.title || 'Другие хоромы';
  if items.length
    section.section.section--room-other(data-aos="fade-up", data-aos-duration="1000")
      .container.section_container
        +SectionTitle({
          title,
          size: 'lg',
          type: 'center'
        })
      .room-other_content.container
        .room-other_items
          each room in items
            .room-other_item
              +RoomCard(room)
        .swiper_nav.room-other_nav
          +BtnIcon({
            icon: 'assets/img/arrow_left.svg',
            styles: ['swiper_nav--light', 'lg']
          })(class='swiper_nav_item-prev room-other_nav-prev')
          +BtnIcon({
            icon: 'assets/img/arrow_right.svg',
            styles: ['swiper_nav--light', 'lg']
          })(class='swiper_nav_item-next room-other_nav-next')
