//- Карточка статьи блога: фото, название, описание, параметры (просмотры, время, дата), кнопка
//- @param {object} item - { title, description, img, imgAlt, params: [{ icon, text }], link }
mixin BlogCard(item)
  article.blog-card
    .blog-card_img
      a.blog-card_img-link(href=item.link)
        img(src=item.img, alt=item.imgAlt || item.title)
    .blog-card_content
      h2.blog-card_title
        a.blog-card_title-link(href=item.link)= item.title
      if item.description
        p.blog-card_description= item.description
      if item.params && item.params.length
        ul.blog-card_params
          each param in item.params
            li.blog-card_param
              if param.icon
                img.blog-card_param-icon(src=param.icon, alt="")
              span.blog-card_param-text= param.text
      .blog-card_actions
        +Button('Подробнее', ['primary', 'md'])(href=item.link)